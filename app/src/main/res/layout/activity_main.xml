<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ic_netology_48dp"
        android:layout_width="@dimen/post_avatar_size"
        android:layout_height="@dimen/post_avatar_size"
        android:padding="4dp"
        android:src="@drawable/ic_netology_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/netology"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        tools:text="@string/netology"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/data"
        app:layout_constraintEnd_toStartOf="@+id/ic_baseline_more_vert_24"

        app:layout_constraintStart_toEndOf="@+id/ic_netology_48dp"
        app:layout_constraintTop_toTopOf="@+id/ic_netology_48dp"  />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/data"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ic_netology_48dp"
        app:layout_constraintStart_toStartOf="@+id/netology" />

    <ImageView
        android:id="@+id/ic_baseline_more_vert_24"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintBottom_toBottomOf="@+id/data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/netology" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="data,ic_baseline_more_vert_24,ic_netology_48dp,netology"
        tools:layout_editor_absoluteY="731dp" />


    <TextView
        android:id="@+id/hey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:text="@string/hey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/ic_netology_48dp" />

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:text="@string/start"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/hey" />


    <TextView
        android:id="@+id/missia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:text="@string/missia"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <TextView
        android:id="@+id/line"
        android:layout_width="399dp"
        android:layout_height="48dp"
        android:autoLink="web"
        android:paddingHorizontal="16dp"
        android:text="@string/line"

        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@+id/missia"
        tools:layout_editor_absoluteX="5dp" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

    <ImageView
        android:id="@+id/baseline_share"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/favorite"
        app:layout_constraintStart_toEndOf="@+id/favoriteText"
        app:layout_constraintTop_toTopOf="@+id/favorite"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_share_24" />

    <ImageView
        android:id="@+id/eyeImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/baseline_share"
        app:layout_constraintEnd_toStartOf="@+id/eyeText"
        app:layout_constraintTop_toTopOf="@+id/baseline_share"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_remove_red_eye_24" />

    <TextView
        android:id="@+id/favoriteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"
        tools:text="@string/favoriteText"

        app:layout_constraintBottom_toBottomOf="@+id/favorite"
        app:layout_constraintStart_toEndOf="@+id/favorite"
        app:layout_constraintTop_toTopOf="@+id/favorite" />

    <TextView
        android:id="@+id/eyeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/eyeText"
        app:layout_constraintBottom_toBottomOf="@+id/eyeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eyeImage"
        app:layout_constraintVertical_bias="0.384" />

    <TextView
        android:id="@+id/shareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        tools:text="@string/shareText"
        app:layout_constraintBottom_toBottomOf="@+id/baseline_share"
        app:layout_constraintStart_toEndOf="@+id/baseline_share"
        app:layout_constraintTop_toTopOf="@+id/baseline_share"
        app:layout_constraintVertical_bias="0.466" />


</androidx.constraintlayout.widget.ConstraintLayout>